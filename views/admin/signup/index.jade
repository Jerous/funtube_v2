doctype html
html
  head
    title= title
    include ../layout/meta
    include ../layout/css
    
 
  body
  .login-page
    .login-box
      .login-logo
        a(href='#')
          b funtube 
        = title
      .login-box-body
        p.login-box-msg 請輸入您的管理帳號與密碼
        div#form-section
        
  include ../layout/js
  script(src='/views/admin/account/signup.js')      

  script(type='text/template', id='tmpl-signup')
      form
          .alerts
            <% _.each(errors, function(err) { %>
            .alert.alert-danger.alert-dismissable
              button.close(type='button', data-dismiss='alert') &times;
              <%= errfor.usernamecheck %>
            <% }); %>
          .form-group(class!='<%= errfor.username ? "has-error" : "" %>')
            input.form-control#username(type='text', name="username", placeholder='帳號')        
            span.glyphicon.glyphicon-user.form-control-feedback  
            span.help-block <%= errfor.username %>
          .form-group(class!='<%= errfor.password ? "has-error" : "" %>')
            input.form-control#password(type='password', name="password", placeholder='密碼')        
            span.glyphicon.glyphicon-lock.form-control-feedback
            span.help-block <%= errfor.password %>
          .row
            .col-xs-12
              button.btn.btn-primary.btn-signup(type='button') 登入